<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:popupBackground">@drawable/spinner_bg</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>

    </style>
    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="textstyletimetablesingle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/logout_user</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="textstyleblacklogout" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/logout_user</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="calendar_style" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textstyleWhiteNopadding" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="textstyleblackSlot" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="textstyleblackSlot1" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="textstyleblackSlot2" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="textstyleblackroom" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="textstyleblackrooms" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="textstyleblack" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF018786</item>
        <!--selected Item color-->
        <item name="colorControlActivated">#FF018786</item>
        <!-- arrow bordercolor(<>)-->
        <!-- Highlight item color-->
        <item name="colorControlHighlight">#0A8600</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">#FAFAFA</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">#FF018786</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">#757575</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">#212121</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">#f1f1f1</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">#f1f1f1</item>

    </style>
</resources>