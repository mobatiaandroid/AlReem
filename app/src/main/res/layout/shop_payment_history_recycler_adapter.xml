<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRelative"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relSub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_bg"
        android:paddingStart="7dp">

        <com.nas.alreem.commonviews.CustomFontDJ5TextWhite
            android:id="@+id/tripsDateTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:marqueeRepeatLimit="3"
            android:maxLines="1"
            android:text="12-12-2019"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/pdfTitle"
            app:layout_constraintEnd_toStartOf="@+id/tripsAmountTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.nas.alreem.commonviews.CustomFontDJ5TextWhite
            android:id="@+id/pdfTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tripsDateTxt"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Trips Title"
            android:textColor="@color/Grey_600"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tripsAmountTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tripsDateTxt" />


        <com.nas.alreem.commonviews.CustomTextViewRegular
            android:id="@+id/tripsAmountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:text="100 AED"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>