<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/includeRel"
        layout="@layout/layout_activity_header"
        />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeRel"
        app:layout_constraintVertical_bias="1.0">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/head"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/includeRel">
    <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
        android:id="@+id/person_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="45"
        android:layout_marginTop="10dp"
        android:text="Personal Information :"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentinfolinear"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/person_info">
    <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="Student Name"
        android:textColor="@color/black"
        android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="             :"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Student Name"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentinfolinearyear"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentinfolinear">
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Student Year"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/colon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="                :"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Student Name"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentinfolinearsection"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentinfolinearyear">
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:layout_marginTop="10dp"
            android:text="Student Section"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/colon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:layout_marginTop="10dp"
            android:text="         :"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:layout_marginTop="10dp"
            android:text="Student Name"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentinfolineardate"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentinfolinearsection">
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_date_of_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Date Of Registration"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/colon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Student Name"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentinfolinearesis"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentinfolineardate">
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_esis_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:layout_marginTop="10dp"
            android:text="ESIS Student No"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/colon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:layout_marginTop="10dp"
            android:text="         :"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/student_esis_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:layout_marginTop="10dp"
            android:text="Student Name"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/split_bg"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pickupquestion"
        app:layout_constraintTop_toBottomOf="@id/studentinfolinearesis"/>
    <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
        android:id="@+id/pickupquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Please Select One way or two way"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@id/border"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/pickup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickupquestion">

        <RadioButton
            android:id="@+id/radioYes"
            android:buttonTint="@color/split_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="One Way" />

        <RadioButton
            android:id="@+id/radioNo"
            android:buttonTint="@color/split_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Way" />
    </RadioGroup>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:gravity="center_vertical"
        android:id="@+id/pickup"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/drop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:background="@drawable/rect_background_grey"
        android:hint="@string/pick_up"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:id="@+id/drop"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_background_grey"
        app:layout_constraintBottom_toTopOf="@+id/parentlinear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickup"
        android:hint="@string/drop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/list_bg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/drop"
        android:id="@+id/parentlinear">
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/parentinfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:text="@string/parents_details"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/downarrowImage"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/downarrow"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentsdetailslinear"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parentlinear">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"
            android:hint="@string/fathers_name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"
            android:hint="@string/mobile_no"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"
            android:hint="@string/email"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkPassportLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parentsdetailslinear"
        android:gravity="center">
        <ImageView
            android:id="@+id/checkPassportImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/check_box_header"/>
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="optional"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentsdetailslinear1"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkPassportLinear">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"
            android:hint="@string/mothers_name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/mobile_no"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/email"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/list_bg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/parentsdetailslinear1"
        android:id="@+id/addresslinear">

        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/address_info"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/address"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/downarrowAddress"
            android:layout_alignParentRight="true"
            android:src="@drawable/downarrow"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressinfo_linear"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addresslinear">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/Gpslocation"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"
            android:hint="@string/door_no"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/street"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/building_name"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/Area"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/city"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/other_Approved"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/contact1"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/contact2"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_background_grey"/>
        <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
            android:id="@+id/landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:layout_marginTop="10dp"
            android:text="@string/land_mark"

            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="@string/enter_land_mark"
            android:padding="5dp"
            android:textSize="16sp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
