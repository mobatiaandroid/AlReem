<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/includeRel"
        layout="@layout/layout_activity_header"
        />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeRel"
        app:layout_constraintVertical_bias="1.0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/includeRel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/studentinfolinear"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="Student Name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="          :"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="Student Name"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/studentinfolinearyear"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/studentinfolinear">
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="Student Year"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/colon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="              :"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_year_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="Student Name"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/studentinfolinearsection"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/studentinfolinearyear">
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:layout_marginTop="10dp"
                    android:text="Student Section"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/colon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:layout_marginTop="10dp"
                    android:text="        :"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_section_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:layout_marginTop="10dp"
                    android:text="Student Name"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/studentinfolineardate"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/studentinfolinearsection">
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_date_of_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="Date Of Registration"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/colon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="Student Name"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/studentinfolinearesis"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/studentinfolineardate">
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_esis_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:layout_marginTop="10dp"
                    android:text="ESIS Student No"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/colon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:layout_marginTop="10dp"
                    android:text="         :"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/student_esis_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:layout_marginTop="10dp"
                    android:text="Student Name"
                    android:textSize="14sp" />
            </LinearLayout>
            <com.nas.alreem.commonviews.CustomTextViewBold
                android:id="@+id/eap_datials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Eap Name"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/studentinfolinearesis"
                android:textSize="18sp" />
            <com.nas.alreem.commonviews.CustomEditTextViewRegular
                android:id="@+id/startandenddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(start and end date:)"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eap_datials"
                android:textSize="18sp" />

            <com.nas.alreem.commonviews.CustomTextViewBold
                android:id="@+id/select_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Select Days"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/startandenddate"
                android:textSize="18sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/daysrec"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/select_days">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parentsdetailslinear"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/daysrec">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"
                    android:hint="@string/fathers_name"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"
                    android:hint="@string/mobile_no"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"
                    android:hint="@string/email"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/checkPassportLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parentsdetailslinear"
                android:gravity="center">
                <ImageView
                    android:id="@+id/checkPassportImg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/star"/>
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="optional"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parentsdetailslinear1"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/checkPassportLinear">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"
                    android:hint="@string/mothers_name"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/mobile_no"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/email"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
            </LinearLayout>
            <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                android:id="@+id/address_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45"
                android:layout_marginTop="10dp"
                android:text="@string/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parentsdetailslinear1"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/gpslocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/locationnew"
                android:text="@string/address"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parentsdetailslinear1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addressinfo_linear"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_info">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"
                    android:hint="@string/door_no"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/street"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:id="@+id/street"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/building_name"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/Area"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:id="@+id/area"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/city"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:id="@+id/city"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>

                <com.nas.alreem.commonviews.CustomEditTextViewRegular
                    android:layout_width="match_parent"
                    android:id="@+id/gpslocationtext"
                    android:layout_height="40dp"
                    android:hint="@string/Gpslocation"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:visibility="gone"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/other_Approved"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/contact1"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/contact2"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:layout_marginTop="10dp"
                    android:text="@string/land_mark"

                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="@string/enter_land_mark"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_background_grey"/>
                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:text="@string/note"
                    android:textSize="13sp" />

                <com.nas.alreem.commonviews.CustomFontSansProTextBlackSemiBold
                    android:id="@+id/acknowledgement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/acknowledgement"
                    android:textSize="13sp" />
                <com.nas.alreem.commonviews.CustomTextViewBold
                    android:id="@+id/signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/sign"
                    android:textSize="13sp" />
                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/digitalsig_bg"
                    android:orientation="horizontal">

                    <com.github.gcacace.signaturepad.views.SignaturePad
                        android:id="@+id/signature_pad"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:visibility="visible" />

                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>